<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  

  <nav class="navbar navbar-expand-lg bg-purple-900 text-white">
    <img src="todologo.png" width="80px" height="80px" class= "ml-4"> 
    <div class="font-bold" style="font-size:33px">TODO</div>
  </nav>
  <br>
  <br>
  <form action="/add/todo" method="POST"class="inline-flex">
  <div  class="card ml-[250px] inline-flex" style="width: 25rem;height:25rem; box-shadow: 0 0 15px 0 rgb(19, 7, 49);">
    <img class="card-img-top " src="st.jpg" height="200px">
    <div class="card-body ">
     <h5 class="card-title text-purple-900 font-bold text-xl font-sans text-center animate-bounce">Enter today's task</h5>
    
      <input name="todo" style="width:100%;
                       border:2px solid #47088f;
                       border-radius: 4px;
                      margin-left:-2%;
                       outline:none;
                       padding:8px;
                       box-sizing: border-box;
                       transition: 3s;
                       text-align: center;
                       box-shadow: 0 0 15px 0 rgb(52, 10, 150);"
       type="text" class="form-control" id="addtitle" aria-describedby="title"
       placeholder="Add your new todo" >
    <br>
   
    <button class="ml-[120px] bg-purple-900 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded  ">
      Add Todo
    </button>

    </div>
  </div>
  <div  class="card ml-[60px] inline-flex " style="width: 25rem;height:25rem;box-sizing: border-box;  box-shadow: 0 0 15px 0 rgb(52, 10, 150);">
    <h1 class="bg-purple-300 h-10 text-center text-2xl font-bold text-purple-900">My Todo List</h1>
      <div class=" position-absolute  p-3"><br>
        <br>
        <% todo.forEach(todos=> { %>
          <br><div class=""><%= todos.todo %>
            &nbsp&nbsp&nbsp
            <a href="/delete/todo/<%= todos._id %>" class="btn bg-purple-900 text-white btn-sm float-right">Delete</a></div>
        <% }) %>
          </div>

    </div>
  </div>
</form>
<svg class="animate-bounce w-6 h-6 ...">
  <!-- ... -->
</svg>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>